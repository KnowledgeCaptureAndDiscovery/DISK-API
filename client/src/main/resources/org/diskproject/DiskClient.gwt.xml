<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<module rename-to='DiskClient'>
	<inherits name='com.google.gwt.user.User' />
	<inherits name="com.google.gwt.uibinder.UiBinder" />
	<inherits name="com.google.gwt.inject.Inject" />
	<inherits name="com.google.gwt.resources.Resources" />

	<!-- Enable the keycloak library -->
    <inherits name="org.realityforge.gwt.keycloak.Keycloak"/>
	
	<!-- Model View Presenter -->
	<inherits name='com.gwtplatform.mvp.Mvp' />

	<!-- REST Client for GWT -->
	<inherits name="org.fusesource.restygwt.RestyGWT" />

	<!-- Vaadin GWT Polymer Elements -->
	<inherits name="com.vaadin.polymer.Elements" />
	
	<!-- CodeMirror editor -->
	<inherits name="edu.stanford.bmir.gwtcodemirror.CodeMirror"/>
	
	<!-- Three4g -->
	<inherits name="org.treblereel.gwt.Three4G"/>

	<!-- GWT Query -->
	<inherits name='com.google.gwt.query.Query'/>

	<!-- Gin Modules -->
	<set-configuration-property name="gin.ginjector.modules"
		value="org.diskproject.client.gin.MainModule" />

	<set-property name="gwt.logging.enabled" value="FALSE"/>

	<!-- Entry Point -->
	<entry-point class='org.diskproject.client.DiskClient' />
	
	<source path='client' />
	<source path='shared' />

</module>
