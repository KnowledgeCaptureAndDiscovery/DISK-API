	xmlns:n='urn:import:com.vaadin.polymer.neon.widget'>

	<g:HTMLPanel>
		<style is="custom-style">
            .list .item {
                @apply(--layout-horizontal);
                margin: 16px 16px 0 16px;
                padding: 20px;
                background-color: #eee;
                border: 1px solid #e5e5e5;
            }
            .list paper-item {
                border-top: 1px dotted #e5e5e5;
                padding: 2px;
                font-size: 13px;
                min-height: 32px;
            }
            .list paper-item.both-borders {
                border-bottom: 1px dotted #e5e5e5;
            }
            .list paper-item:first-of-type {
                border-top: 0px;
            }
            .list paper-item iron-icon {
                margin-right: 8px;
                margin-left: 8px;
                min-width: 18px;
                width: 18px;
                height: 18px;
            }
            .list paper-item iron-icon.transparent {
                opacity: 0;
            }
            div.padded {
                padding-left: 10px;
                padding-right: 10px;
            }      
            .list paper-item.header {
                font-weight: 500;
                background-color: #f5f5f5;
                cursor: default;
                font-size: 13px;
            }
            paper-item.no-padding {
            	padding: 0px;
            }
            paper-icon-button.blue {
            	color: var(--paper-green-500);
            }
            .list paper-item iron-icon.blue {
                background-color: transparent;
                border: 0px;
            }
			.list paper-item iron-icon.blue {
                background-color: transparent;
                border: 0px;
            }
            div.content {
            	padding: 0px;
            }
            div.outlined {
                border-radius: 8px;
                border: 1px solid #e5e5e5;
                margin: 10px;
			}
            paper-fab.addicon {
            	position: fixed;
            	right: 10px;
            	top: 10px;
            }
            .ontolist {
                padding: 5px 20px;
                font: 12px Monaco, Consolas, "Andale Mono", "DejaVu Sans Mono", monospace;
            }
            .ontoentry {
            	display: flex;
            	justify-content: space-between;
            	border: 1px solid darkgray;
							border-radius: 4px;
							padding: 1px 10px;
							line-height: 24px;
							margin-bottom: 4px;
						}
						.code {
							font:12px Monaco,Consolas,"Andale  Mono","DejaVu Sans Mono",monospace;
							font-weight: bold;
						}
						.paper-button-0 {
						  padding: 0;
						  min-width: 24px;
						  display: inline-block;
						}
						
						table.terms-table {
							border-collapse: collapse;
						}

						th {
							border-bottom:1px solid black;
						}

						tr > td:nth-child(2) {
							width: 40px;
							text-align: center;
						}

						tr > td:nth-child(1) {
							font-weight: bold;
						}
		</style>

		<div style="padding: 4px 10px; font-size: 14px;">
